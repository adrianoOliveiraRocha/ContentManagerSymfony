{% extends 'accounts/base.html.twig' %}

{% block contentpage %}
<div class="panel panel-default form-central"
	style="width: 70%; margin-left: auto; margin-right: auto; margin-top: 3%;">
	<table id="table" class="display">

		<thead>
			<tr>
				<th>ID</th>
				<th>Nome</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
			<tr>
				<td>
					<a href="{{ path('edit_category', {'id': category.id, 'name': category.name}) }}"
					 title="Editar categoria">
					{{ category.id }}
					</a>
				</td>
				<td>{{ category.name }}</td>
				<td>
					<a type="button" class="btn btn-danger" style='color: white' 
						href="{{ path('delete_category', {'id': category.id}) }}">
						Deletar
					</a>
				</td>
			</tr>
			{% endfor %}


		</tbody>
	</table>
</div>
{% endblock %}
