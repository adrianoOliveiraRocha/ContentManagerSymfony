{% block conteudo %}
<a name="produtos"></a>

<section id="divisao_produtos"> <!-- produtos -->
	
	<div class="container">
		<div class="row">

				<div class="container"><div class="row"><div class="espaco-linha-1"></div></div></div> <!-- Espaço 01 -->
				
			<div class="col-md-4 title_secao loja">
				<h1>PRODUTOS</h1>

			</div>
			
		</div>
			
	</div>
		
	<div class="container"> <!-- Container Tabs -->
		<div class="row">
			<!-- Categorias -->
			<div class="col-md-3">
				<nav>
					<div  class="nav flex-column" id="nav-tab" role="tablist" aria-orientation="vertical">
						<a class="nav-item nav-link active Tabs_produtos"  
						href="{{ path('products') }}" 
						role="tab" 
						aria-controls="nav-home">
							Todas as Categorias
						</a>
						{% for category in categories %}
						<a class="nav-item nav-link active Tabs_produtos"  
						href="{{ path('products') }}?id_category={{category.id}}" 
						role="tab" 
						aria-controls="nav-home">
							{{ category.name }}
						</a>
						{% endfor %}
						

					</div>
					
				</nav>
				
			</div>
			<!-- Fim categorias -->
			
			<div class="col-md-9" id="central-content">

				<div class="titulo_categoria_tab">
					<h1><span class="icon-check"></span>{{ category_name }}</h1>
				
				</div>

				<div class="row">
					{% if products %}

					{% for product in products %}
					<div class="col-md-4 produtos">

						<div class="cubo_produto">
							<img class="img-responsive" src="imagens_produtos/img_modelo.jpg">
							<h3>1000 Cartões de visita - Couchê 250g - 4 x 1 Verniz total frente</h3>
							<div class="cod_preco_prod" title="Nº Referência">
								<p id="cod_prod">Ref: card01</p>
							
							</div>
							<div class="cod_preco_prod">
								<p id="preco_prod">R$ 80,00</p>
							
							</div>
							<div class="btn_comprar">
								<a href="#">
									Fazer Pedido 
									<span class="icon-right-open"></span>
									</a>
							
							</div>
							
						</div>
						
					</div>
					{% endfor %}

					{% else %}
					Não há produtos dessa categoria
					{% endif %}

				</div>
				
				{# display navigation #}
				<div class="navigation">
				    {{ knp_pagination_render(products) }}
				</div>

			</div>
		
		</div>
		
	</div> <!-- //Final Container Tabs -->
	
</section> <!--// Final produtos -->


