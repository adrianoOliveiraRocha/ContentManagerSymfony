{% extends 'accounts/base.html.twig' %}

{% block contentpage %}
<div class="panel panel-default form-central"
  style="width: 50%; margin-left: auto; margin-right: auto; margin-top: 3%;">

  <!-- messages -->
  {% for message in app.flashes('msg') %}
  <div class="alert alert-warning alert-dismissable">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
      {{ message }}
  </div>
  {% endfor %}
  <!-- end messages -->

  <div class="container">
    <h3>Área Administrativa -> Novo Local Entega</h3>
    <p></p>

    <form action="{{ path('new_delivery') }}" 
    	method="post">
    <input type="hidden" name="save">
      
      <div class="form-group">
        <label>Bairro:</label>
        <input name='neighborhood' class="form-control"
        placeholder="Digite o nome do bairro">
      </div>

      <div class="form-group">
        <label>Valor R$:</label>
        <input name='price' class="form-control"
        placeholder="Digite o valor da entrega para este bairro">
      </div>      

      <button type="submit" class="btn btn-primary">Enviar</button>
      
    </form>

  </div>

</div>

{% endblock %}
