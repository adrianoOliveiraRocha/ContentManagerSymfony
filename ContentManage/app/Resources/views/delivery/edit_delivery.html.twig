{% extends 'accounts/base.html.twig' %}

{% block contentpage %}
<div class="panel panel-default form-central"
  style="width: 50%; margin-left: auto; margin-right: auto; margin-top: 3%;">

  <!-- messages -->
  {% for message in app.flashes('msg') %}
  <div class="alert alert-warning alert-dismissable">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
      {{ message }}
  </div>
  {% endfor %}
  <!-- end messages -->

  <div class="container">
    <h2>Editar Entrega</h2>
    <form action="{{ path('edit_delivery') }}" method="post">
      <input type="hidden" name='id' value="{{delivery.id}}"/>
      <div class="form-group">
        <label>Bairro:</label>
        <input name='neighborhood' class="form-control"
        placeholder="Digite o nome do novo bairro" 
        value="{{delivery.neighborhood}}">
        
      </div>
      <div class="form-group">
        <label>Valor R$:</label>
        <input name='preice' class="form-control"
        placeholder="Digite o valor" 
        value="{{delivery.value}}">
        
      </div>

      <button type="submit" class="btn btn-primary">Enviar</button>
      <a type="button" class="btn btn-danger" style='color: white' 
        href="#">
        Deletar
      </a>
    </form>
  </div>

</div>

{% endblock %}
