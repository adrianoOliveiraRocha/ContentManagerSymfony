{% extends 'accounts/base.html.twig' %}

{% block contentpage %}
<div class="panel panel-default form-central"
	style="width: 70%; margin-left: auto; margin-right: auto; margin-top: 3%;">
	<!-- messages -->
    {% for message in app.flashes('msg') %}
    <div class="alert alert-warning alert-dismissable">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{ message }}
    </div>
    {% endfor %}
    <!-- end messages -->
	<h3>Área Administrativa -> Home</h3>
	<p></p>
	<table id="table" class="display">

		<thead>
			<tr>
				<th>ID</th>
				<th>Nome</th>
				<th>Imagem</th>
				
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
			<tr>
				<td>
					<a href="{{ path('edit_product', {'id': product.id}) }}"
					 title="Detalhes">
					{{ product.id }}
					</a>
				</td>
				<td>{{ product.name }}</td>
				<td><img src="{{ asset('uploads/images/thumb/') }}{{ product.image }}"></td>
			
			</tr>
			{% endfor %}


		</tbody>
	</table>
	


</div>
{% endblock %}
