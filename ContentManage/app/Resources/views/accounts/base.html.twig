       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
         <span class="navbar-toggler-icon"></span>
       </button>

       <!-- Navbar links -->
       <div class="collapse navbar-collapse" id="collapsibleNavbar">
         <ul class="navbar-nav">

            <li class="nav-item">
             <a class="nav-link" href="{{ path('admin') }}">Home</a>
           </li>

           <li class="nav-item">
             <a class="nav-link" href="/">Ir para o site</a>
           </li>

           <li class="nav-item dropdown">
      	      <a class="nav-link dropdown-toggle" href="#"
      	      id="navbardrop" data-toggle="dropdown">
      	        Categorias
      	      </a>
      	      <div class="dropdown-menu">
      	        <a class="dropdown-item"
                href="/new_category" >
      	        	Nova Categoria
      	        </a>
        	        <a class="dropdown-item" href="/show_categories">
      	        	Exibir Categorias
      	        </a>
              </div>
            </li>


            <li class="nav-item dropdown">
       	      <a class="nav-link dropdown-toggle" href="#"
       	      id="navbardrop" data-toggle="dropdown">
       	        Produtos
       	      </a>
       	      <div class="dropdown-menu">
       	        <a class="dropdown-item" 
                  href="{{ path('new_product') }}" >
       	        	Novo Produto
       	        </a>
       	        <a class="dropdown-item" 
                  href="{{ path('show_products') }}">
       	        	Exibir Produtos
       	        </a>
               </div>
             </li>


             <li class="nav-item dropdown">
        	      <a class="nav-link dropdown-toggle" href="#"
        	      id="navbardrop" data-toggle="dropdown">
        	        Promoções
        	      </a>
        	      <div class="dropdown-menu">
        	        <a class="dropdown-item" 
                  href="{{ path('new_promotion') }}" >
        	        	Nova Promoção
        	        </a>
        	        <a class="dropdown-item" 
                  href="{{ path('show_promotions') }}">
        	        	Exibir Promoções
        	        </a>
                </div>
              </li>


           <li class="nav-item">
             <a class="nav-link" href="/logout">Sair</a>
           </li>
         </ul>
       </div>
      </nav>
      {% endblock %}
      <!-- end menu -->

      {% block contentpage %}

      {% endblock %}

      {% block footer %}
      <footer class="fixed-bottom">
      	Rodapé aqui
      </footer>
      {% endblock %}



  </div>
  {% endblock %}
  </body>
</html>
